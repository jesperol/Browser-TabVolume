{
  "manifest_version": 2,
  
  "author": "Ron Dekker",
  
  "name": "Tab Volume",
  "version": "1.1.0",
  "description": "A volume controller for each tab.",
  
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  
  "permissions": [
    "activeTab",
    "storage",
    "tabCapture"
  ],
  
  "background": {
    "scripts": [ "background.js" ]
  },

  "browser_action": {
    "default_popup": "popup/index.html"
  },

  "options_ui": {
    "page": "options/index.html",
    "browser_style": true,
    "chrome_style": true
  }
}
